                    android:id="@+id/backbt"
                    android:layout_height="36dp"
                    android:layout_marginRight="10dp"

                    android:background="@drawable/closebg"
                    android:textColor="@color/newblue"
                    android:text="Close"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:paddingEnd="12dp"
                    android:fontFamily="@font/source_sans_pro"
                    android:drawableTint="@color/newblue"
                    android:drawableEnd="@drawable/closebg2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:backgroundTint="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"></androidx.appcompat.widget.AppCompatButton>
            </androidx.constraintlayout.widget.ConstraintLayout>







